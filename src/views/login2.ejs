 <!--PARTE 1-->

 <section class="log-sec">

<div class="container">
    <div class="row justify-content-md-center">
    <div class="col-xs-4 col-sm-5 col-md-7 col-lg-7">

 <div class="registro1">

    <form action="/users/registro" method="POST" class="main" style="padding-bottom: 200px; margin-bottom: 80px;">
      <div class="login-box" id="register-box">
          <h2>¿Listo para hacer algo por ti hoy?</h2>

              <div class="user-box">
                  <input type="text" name="first_name" required="" id="first_name"/>
                  <label for="first_name">Nombre</label>
                </div>
                <% if(locals.errors && errors.name){ %>
                  <div class="alert">
                      <i class="fas fa-times-circle"></i>
                      <%=errors.name.msg%>
                  </div>
              <%}%>
                <div class="user-box">
                  <input type="text" name="last_name" required="" id="last_name"/>
                  <label for="last_name">Apellido</label>
                </div>
                <% if(locals.errors && errors.last_name){ %>
                  <div class="alert">
                      <i class="fas fa-times-circle"></i>
                      <%=errors.last_name.msg%>
                  </div>
              <%}%>
            <div class="user-box">
              <input type="text" name="email" required="" id="email"/>
              <label for="email">Correo electrónico</label>
            </div>
            <% if(locals.errors && errors.email){ %>
              <div class="alert">
                  <i class="fas fa-times-circle"></i>
                  <%=errors.email.msg%>
              </div>
          <%}%>
            <div class="user-box">
              <input type="password" name="password" required="" id="password"/>
              <label for="password">Contraseña</label>
            </div>
            <% if(locals.errors && errors.password){ %>
              <div class="alert">
                  <i class="fas fa-times-circle"></i>
                  <%=errors.password.msg%>
              </div>
          <%}%>
            <div class="user-box">
              <input type="password" name="password" required="" id="confirm_password"/>
              <label for="password">Confirmar contraseña</label>
            </div>

            <!--Boton-->
            <div class="padre">
                <div class="hijo">
            <a href="#objetivos"><button type="button" class="registerbutton" style="text-align:center;">Registrarme</button></a>
        </div>
        <div>
            <p class="p" style="margin-top: 60px"><br>¿Ya tienes una cuenta? <br> <a href="/users/login"> <span style="text-decoration:underline">Inicia sesión</span></p></a>
        </div>
        </div>
        </td>
      </tr>
    </table>
  </td>
</tr>
